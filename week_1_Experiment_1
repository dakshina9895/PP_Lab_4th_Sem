# 5. Check whether a number is even or odd.
a = int(input("Enter a number: "))
if(a % 2 == 0):
   print(a," is an even number.")
else:
    print(a," is an odd number.")



# 6. Write a Python program that takes a list and returns a new list with unique elements of the first list.
input_list = [1, 2, 2, 3, 4, 4, 5, 6, 6, 7] 
unique_list = []
for num in input_list:
    if num not in unique_list:
        unique_list.append(num)
print("Unique elements:", unique_list)


# 7. Convert Celsius to Fahrenheit.
cel = float(input("Celcius:"))
fer = (9/5 * cel) + 32
print(f"{cel} Celcius into  Fahrenheit: {fer}") 



# 8. Calculate the area of a circle.
r = float(input("Enter the radius: "))
area = 3.14 * r * r
print("Area of a circle: ",area)



# 9. Reverse a given string.
a = input("Enter any string: ")
rev = " "
for char in a:
    rev = char + rev
  
print(rev)  



# 10. Check if a number is a prime number.
a = int(input("Enter a number: "))
count = 0
for i in range(2,int(a/2)+1):
    if(a % i == 0):
        count+=1  
        break
    else:
           count==0
        
if(count > 0):
    print(a,"is not a Prime Number")
else:
    print(a," is a prime number")



# 11. Calculate the factorial of a number.
a = int(input("Enter a number:"))
fact = 1
for i in range(1,a+1):
    fact = fact * i
    
print(f"Factorial of {a} : {fact}")



# 12. Find the largest item from a given list
list1 = [1,6,2,45]
maxNum = list1[0]
for i in list1:
    if(i>maxNum):
        maxNum = i
    
print(f"{maxNum} is the largest.")



# 13.Write a Python program to check whether a number is in a given range.
startPoint = int(input("Enter the starting point: "))
endPoint = int(input("Enter the ending point: "))
num = int(input("Enter a number:"))
if (num >= startPoint and num <= endPoint):
    print("Number is in given range.")
else:    
    print("Number is not in range.")



# 14. Calculate the number of upper case letters and lower case letters in a string""
name = input("Enter a string:")
upper = 0
lower = 0
for i in name:
    if (i.isupper()):
        upper+=1
    else:
        lower+=1
        
print(f"Number of upper case letters in a string: {upper}")
print(f"Number of lower case letters in a string: {lower}")
